{
  "presets": [
    ["@babel/preset-env", {
      "modules": false
    }],
    "@babel/preset-stage-2",
    "@babel/preset-react"
  ],
  "plugins": ["transform-decorators-legacy", "add-react-displayname"],
  "env": {
    "development": {
      "plugins": ["react-hot-loader/babel"]
    },
    "test": {
      "presets": ["@babel/preset-env"]
    }
  }
}
