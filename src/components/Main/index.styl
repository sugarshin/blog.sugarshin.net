@import '../../stylus/media-query'
@import '../../stylus/variables'

.root
  &::after
    content ''
    position absolute
    bottom 0
    left 0
    z-index -1
    background url(../../images/p.jpg) no-repeat center
    background-size 100% auto
    width 320px
    height 320px
    opacity .05
    transform translate(-50%, 30%)
    @media $mq-medium
      width 480px // @stylint ignore
      height 480px // @stylint ignore
    @media $mq-large
      width 640px // @stylint ignore
      height 640px // @stylint ignore
.header
  height $header-height
  line-height 1
  background-color #fcfcfc
  border-bottom 1px solid #f3f3f3
  padding 8px
  position relative
  z-index 1
  a
    color inherit
    text-decoration none
    vertical-align middle
.toggleButton
  position absolute
  top 0
  right 0
  z-index 1
  button
    width $header-height
    height $header-height
    padding 0
.sidebar
  min-width 240px
  max-width 320px
  width 36%
  background-color #fcfcfc
  border-left 1px solid #f3f3f3
  padding 16px
  -webkit-overflow-scrolling touch
.content
  -webkit-overflow-scrolling touch
.footer
  border-top 1px solid #f3f3f3
  height 40px
  line-height 40px
  text-align center
  margin-top 32px
  small
    vertical-align middle
